<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/fontawesome/css/all.min.css">
  <style>
    /* Improved base styles with better spacing and typography */
    .profile-container {
      min-height: 100vh;
      padding: 2rem 1rem;
      background: linear-gradient(to bottom, #f8faf9 0%, #ffffff 100%);
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
    }

    /* Enhanced profile header with better visual hierarchy */
    .profile-header {
      background: linear-gradient(135deg, var(--accent-color) 0%, var(--accent-light) 100%);
      color: var(--color-white);
      padding: 3rem 2rem;
      border-radius: 24px;
      margin-bottom: 2rem;
      text-align: center;
      box-shadow: 0 10px 40px rgba(85, 164, 78, 0.25);
      position: relative;
      overflow: hidden;
    }

    .profile-header::before {
      content: '';
      position: absolute;
      top: -50%;
      right: -50%;
      width: 200%;
      height: 200%;
      background: radial-gradient(circle, rgba(255,255,255,0.1) 1px, transparent 1px);
      background-size: 30px 30px;
      animation: float 20s linear infinite;
    }

    @keyframes float {
      0% { transform: translate(0, 0); }
      100% { transform: translate(-30px, -30px); }
    }

    .profile-header-content {
      position: relative;
      z-index: 1;
    }

    /* Storm effect medical icons */
    .header-icons {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      overflow: hidden;
      pointer-events: none;
      z-index: 0;
    }

    .floating-icon {
      position: absolute;
      color: rgba(255, 255, 255, 0.4);
      animation: float-horizontal-storm 3s infinite linear;
      font-size: 35px;
      filter: drop-shadow(0 2px 8px rgba(0, 0, 0, 0.3));
      top: var(--top-pos);
      left: -50px;
      will-change: transform; /* Performance optimization */
      transform: translateZ(0); /* Hardware acceleration */
    }

    /* Set random vertical positions using CSS variables */
    .floating-icon:nth-child(1) { --top-pos: 10%; animation-delay: 0s; animation-duration: 2.5s; }
    .floating-icon:nth-child(2) { --top-pos: 25%; animation-delay: 0.4s; animation-duration: 3s; }
    .floating-icon:nth-child(3) { --top-pos: 40%; animation-delay: 0.8s; animation-duration: 2s; }
    .floating-icon:nth-child(4) { --top-pos: 15%; animation-delay: 1.2s; animation-duration: 3.5s; }
    .floating-icon:nth-child(5) { --top-pos: 65%; animation-delay: 0.2s; animation-duration: 2.8s; }
    .floating-icon:nth-child(6) { --top-pos: 80%; animation-delay: 1.6s; animation-duration: 2.2s; }
    .floating-icon:nth-child(7) { --top-pos: 35%; animation-delay: 0.6s; animation-duration: 3.2s; }
    .floating-icon:nth-child(8) { --top-pos: 55%; animation-delay: 1.8s; animation-duration: 2.6s; }
    .floating-icon:nth-child(9) { --top-pos: 75%; animation-delay: 1s; animation-duration: 2.4s; }
    .floating-icon:nth-child(10) { --top-pos: 5%; animation-delay: 1.4s; animation-duration: 3.8s; }

    @keyframes float-horizontal-storm {
      0% {
        transform: translateX(-100px) translateY(0) rotate(0deg);
        opacity: 0;
      }
      5% {
        opacity: 0.8;
      }
      10% {
        opacity: 1;
      }
      90% {
        opacity: 1;
      }
      95% {
        opacity: 0.8;
      }
      100% {
        transform: translateX(calc(100vw + 100px)) translateY(20px) rotate(180deg);
        opacity: 0;
      }
    }

    /* Mobile-optimized storm effect */
    @media (max-width: 768px) {
      .floating-icon {
        font-size: 28px;
        animation: float-horizontal-storm-mobile 2.5s infinite linear;
        left: -30px;
      }

      @keyframes float-horizontal-storm-mobile {
        0% {
          transform: translateX(-50px) translateY(0) rotate(0deg);
          opacity: 0;
        }
        5% {
          opacity: 0.7;
        }
        10% {
          opacity: 1;
        }
        90% {
          opacity: 1;
        }
        95% {
          opacity: 0.7;
        }
        100% {
          transform: translateX(calc(100vw + 50px)) translateY(15px) rotate(180deg);
          opacity: 0;
        }
      }

      /* Reduce animation intensity on mobile */
      .floating-icon:nth-child(1) { animation-duration: 2s; }
      .floating-icon:nth-child(2) { animation-duration: 2.5s; }
      .floating-icon:nth-child(3) { animation-duration: 1.8s; }
      .floating-icon:nth-child(4) { animation-duration: 2.8s; }
      .floating-icon:nth-child(5) { animation-duration: 2.2s; }
      .floating-icon:nth-child(6) { animation-duration: 1.9s; }
      .floating-icon:nth-child(7) { animation-duration: 2.6s; }
      .floating-icon:nth-child(8) { animation-duration: 2.1s; }
      .floating-icon:nth-child(9) { animation-duration: 2.3s; }
      .floating-icon:nth-child(10) { animation-duration: 3s; }
    }

    /* More refined avatar with better hover effect */
    .profile-avatar {
      width: 120px;
      height: 120px;
      background: rgba(255, 255, 255, 0.25);
      backdrop-filter: blur(10px);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 1.5rem;
      font-size: 48px;
      border: 4px solid rgba(255, 255, 255, 0.5);
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.15);
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .profile-avatar:hover {
      transform: scale(1.08) rotate(5deg);
      border-color: var(--color-white);
    }

    .profile-name {
      font-size: 2rem;
      font-weight: 700;
      margin-bottom: 0.5rem;
      text-shadow: 0 2px 12px rgba(0, 0, 0, 0.15);
      letter-spacing: -0.5px;
    }

    .profile-role {
      font-size: 1.125rem;
      opacity: 0.95;
      text-transform: capitalize;
      font-weight: 500;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      background: rgba(255, 255, 255, 0.2);
      padding: 0.5rem 1.25rem;
      border-radius: 50px;
      backdrop-filter: blur(10px);
    }

    /* Better back link styling */
    .back-link {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      color: var(--accent-color);
      text-decoration: none;
      font-weight: 600;
      margin-bottom: 1.5rem;
      transition: all 0.3s ease;
      padding: 0.75rem 1.25rem;
      border-radius: 12px;
      background: white;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }

    .back-link:hover {
      color: var(--color-white);
      background-color: var(--accent-color);
      transform: translateX(-4px);
      box-shadow: 0 4px 16px rgba(85, 164, 78, 0.2);
    }

    /* Improved content layout with better grid system */
    .profile-content {
      display: grid;
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    @media (min-width: 1024px) {
      .profile-content {
        grid-template-columns: 2fr 1fr;
      }

      .profile-section.full-width {
        grid-column: 1 / -1;
      }
    }

    /* Enhanced section cards with better shadows and spacing */
    .profile-section {
      background-color: var(--color-white);
      border-radius: 20px;
      padding: 2rem;
      box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06);
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      border: 1px solid rgba(0, 0, 0, 0.04);
    }

    .profile-section:hover {
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
      transform: translateY(-2px);
    }

    .profile-section h2 {
      font-size: 1.5rem;
      font-weight: 700;
      margin-bottom: 1.75rem;
      color: var(--text-color);
      display: flex;
      align-items: center;
      gap: 0.75rem;
      padding-bottom: 1rem;
      border-bottom: 2px solid #f0f0f0;
    }

    .profile-section h2 i {
      color: var(--accent-color);
      font-size: 1.25rem;
    }

    /* Better form styling with improved inputs */
    .form-row {
      display: grid;
      grid-template-columns: 1fr;
      gap: 1.25rem;
      margin-bottom: 1.25rem;
    }

    @media (min-width: 640px) {
      .form-row {
        grid-template-columns: 1fr 1fr;
      }
    }

    .form-group {
      margin-bottom: 1.25rem;
    }

    .form-label {
      display: block;
      font-size: 0.875rem;
      font-weight: 600;
      color: #374151;
      margin-bottom: 0.5rem;
      letter-spacing: 0.3px;
    }

    .form-control {
      width: 100%;
      padding: 0.875rem 1rem;
      border: 2px solid #e5e7eb;
      border-radius: 12px;
      font-size: 1rem;
      transition: all 0.3s ease;
      background: #fafafa;
    }

    .form-control:focus {
      outline: none;
      border-color: var(--accent-color);
      background: white;
      box-shadow: 0 0 0 4px rgba(85, 164, 78, 0.1);
    }

    .form-control:disabled {
      background-color: #f3f4f6;
      color: #9ca3af;
      cursor: not-allowed;
    }

    .form-group small {
      display: block;
      margin-top: 0.5rem;
      color: #6b7280;
      font-size: 0.875rem;
    }

    /* Enhanced button styling */
    .btn {
      padding: 0.875rem 2rem;
      border-radius: 12px;
      font-size: 1rem;
      font-weight: 600;
      border: none;
      cursor: pointer;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      display: inline-flex;
      align-items: center;
      gap: 0.625rem;
      text-decoration: none;
    }

    .btn-primary {
      background: linear-gradient(135deg, var(--accent-color) 0%, var(--accent-light) 100%);
      color: var(--color-white);
      box-shadow: 0 4px 16px rgba(85, 164, 78, 0.25);
    }

    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 24px rgba(85, 164, 78, 0.35);
    }

    .btn-primary:active {
      transform: translateY(0);
    }

    /* Improved info grid with better visual hierarchy */
    .info-grid {
      display: grid;
      grid-template-columns: 1fr;
      gap: 1.25rem;
    }

    @media (min-width: 640px) {
      .info-grid {
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      }
    }

    .info-item {
      padding: 1.25rem;
      background: linear-gradient(135deg, #f9fafb 0%, #ffffff 100%);
      border-radius: 12px;
      border: 1px solid #e5e7eb;
      transition: all 0.3s ease;
    }

    .info-item:hover {
      border-color: var(--accent-color);
      box-shadow: 0 4px 12px rgba(85, 164, 78, 0.1);
    }

    .info-label {
      font-size: 0.75rem;
      font-weight: 700;
      color: #6b7280;
      text-transform: uppercase;
      letter-spacing: 0.8px;
      margin-bottom: 0.5rem;
      display: block;
    }

    .info-value {
      font-size: 1rem;
      color: var(--text-color);
      font-weight: 500;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .info-value i {
      color: var(--accent-color);
      font-size: 0.875rem;
    }

    /* Enhanced badge styling */
    .badge {
      display: inline-flex;
      align-items: center;
      gap: 0.375rem;
      padding: 0.5rem 1rem;
      border-radius: 50px;
      font-size: 0.875rem;
      font-weight: 600;
    }

    .badge-success {
      background: linear-gradient(135deg, #10b981 0%, #059669 100%);
      color: white;
      box-shadow: 0 2px 8px rgba(16, 185, 129, 0.3);
    }

    /* Refined logout section with better visual treatment */
    .logout-section {
      background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
      border-radius: 20px;
      padding: 2.5rem 2rem;
      box-shadow: 0 8px 32px rgba(239, 68, 68, 0.25);
      color: var(--color-white);
      text-align: center;
      border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .logout-section h2 {
      font-size: 1.5rem;
      font-weight: 700;
      margin-bottom: 0.75rem;
      color: var(--color-white);
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.75rem;
      border-bottom: none;
      padding-bottom: 0;
    }

    .logout-section p {
      font-size: 1rem;
      margin-bottom: 1.75rem;
      opacity: 0.95;
      line-height: 1.6;
    }

    .logout-btn {
      background-color: var(--color-white);
      color: #ef4444;
      padding: 1rem 2.5rem;
      border-radius: 12px;
      font-size: 1rem;
      font-weight: 700;
      border: none;
      cursor: pointer;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      display: inline-flex;
      align-items: center;
      gap: 0.75rem;
      box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
    }

    .logout-btn:hover {
      background-color: #fee2e2;
      transform: translateY(-2px);
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
    }

    .logout-btn:active {
      transform: translateY(0);
    }

    .logout-btn i {
      font-size: 1.125rem;
    }

    /* Better alert styling */
    .alert {
      padding: 1rem 1.25rem;
      border-radius: 12px;
      margin-bottom: 1.5rem;
      display: flex;
      align-items: center;
      gap: 0.75rem;
      font-weight: 500;
      animation: slideDown 0.3s ease forwards;
    }

    @keyframes slideDown {
      from {
        opacity: 0;
        transform: translateY(-10px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .alert-success {
      background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
      color: #065f46;
      border: 1px solid #6ee7b7;
    }

    .alert-error {
      background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
      color: #991b1b;
      border: 1px solid #fca5a5;
    }

    /* Improved fade-in animation */
    .fade-in {
      animation: fadeIn 0.5s ease forwards;
      opacity: 0;
    }

    .fade-in:nth-child(1) { animation-delay: 0.1s; }
    .fade-in:nth-child(2) { animation-delay: 0.2s; }
    .fade-in:nth-child(3) { animation-delay: 0.3s; }
    .fade-in:nth-child(4) { animation-delay: 0.4s; }
    .fade-in:nth-child(5) { animation-delay: 0.5s; }

    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    /* Custom Modal Styles */
    .modal-overlay {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.6);
      backdrop-filter: blur(4px);
      z-index: 9999;
      animation: fadeIn 0.3s ease;
    }

    .modal-overlay.active {
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .modal-content {
      background: white;
      border-radius: 24px;
      padding: 2.5rem;
      max-width: 500px;
      width: 90%;
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
      animation: slideUp 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      position: relative;
    }

    @keyframes slideUp {
      from {
        opacity: 0;
        transform: translateY(40px) scale(0.95);
      }
      to {
        opacity: 1;
        transform: translateY(0) scale(1);
      }
    }

    .modal-icon {
      width: 80px;
      height: 80px;
      margin: 0 auto 1.5rem;
      display: flex;
      align-items: center;
      justify-content: center;
      border-radius: 50%;
      font-size: 2.5rem;
    }

    .modal-icon.error {
      background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
      color: #dc2626;
    }

    .modal-icon.success {
      background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
      color: #059669;
    }

    .modal-title {
      font-size: 1.75rem;
      font-weight: 700;
      color: var(--text-color);
      margin-bottom: 1rem;
      text-align: center;
    }

    .modal-message {
      font-size: 1.125rem;
      color: #6b7280;
      line-height: 1.6;
      text-align: center;
      margin-bottom: 2rem;
    }

    .modal-actions {
      display: flex;
      gap: 1rem;
      justify-content: center;
    }

    .modal-btn {
      padding: 0.875rem 2rem;
      border-radius: 12px;
      font-size: 1rem;
      font-weight: 600;
      border: none;
      cursor: pointer;
      transition: all 0.3s ease;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
    }

    .modal-btn-primary {
      background: linear-gradient(135deg, var(--accent-color) 0%, var(--accent-light) 100%);
      color: white;
      box-shadow: 0 4px 16px rgba(85, 164, 78, 0.25);
    }

    .modal-btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 24px rgba(85, 164, 78, 0.35);
    }

    .modal-btn-secondary {
      background: #f3f4f6;
      color: #374151;
    }

    .modal-btn-secondary:hover {
      background: #e5e7eb;
    }

    .modal-close {
      position: absolute;
      top: 1.25rem;
      right: 1.25rem;
      background: #f3f4f6;
      border: none;
      width: 36px;
      height: 36px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      transition: all 0.3s ease;
      font-size: 1.25rem;
      color: #6b7280;
    }

    .modal-close:hover {
      background: #e5e7eb;
      transform: rotate(90deg);
    }

    /* Enhanced mobile responsiveness */
    @media (max-width: 768px) {
      .profile-container {
        padding: 1rem 0.75rem;
      }

      .profile-header {
        padding: 2rem 1.5rem;
        border-radius: 20px;
      }

      .profile-avatar {
        width: 100px;
        height: 100px;
        font-size: 40px;
      }

      .profile-name {
        font-size: 1.75rem;
      }

      .profile-role {
        font-size: 1rem;
        padding: 0.5rem 1rem;
      }

      .profile-section {
        padding: 1.5rem;
        border-radius: 16px;
      }

      .profile-section h2 {
        font-size: 1.25rem;
        margin-bottom: 1.25rem;
      }

      .logout-section {
        padding: 2rem 1.5rem;
        border-radius: 16px;
      }

      .logout-section h2 {
        font-size: 1.25rem;
      }

      .btn, .logout-btn {
        width: 100%;
        justify-content: center;
      }

      .back-link {
        font-size: 0.875rem;
      }

      .modal-content {
        padding: 2rem 1.5rem;
        width: 95%;
      }

      .modal-title {
        font-size: 1.5rem;
      }

      .modal-message {
        font-size: 1rem;
      }

      .modal-icon {
        width: 70px;
        height: 70px;
        font-size: 2rem;
      }

      .modal-actions {
        flex-direction: column;
      }

      .modal-btn {
        width: 100%;
        justify-content: center;
      }
    }

    @media (max-width: 480px) {
      .profile-name {
        font-size: 1.5rem;
      }

      .profile-section {
        padding: 1.25rem;
      }

      .form-control {
        font-size: 0.9375rem;
      }
    }
  </style>
</head>
<body>
  <% if (user && user.role === 'customer') { %>
    <%- include('../components/customer-navbar', { currentPath: '/auth/profile' }) %>
  <% } %>
  
  <div class="profile-container">
    <div class="container">
      <% if (user && user.role !== 'customer') { %>
      <a href="/" class="back-link">
        <i class="fas fa-arrow-left"></i>
        Back to Dashboard
      </a>
      <% } %>
      
      <div class="profile-header fade-in">
        <!-- Storm effect icons -->
        <div class="header-icons">
          <i class="fas fa-pills floating-icon"></i>
          <i class="fas fa-capsules floating-icon"></i>
          <i class="fas fa-syringe floating-icon"></i>
          <i class="fas fa-prescription-bottle floating-icon"></i>
          <i class="fas fa-heartbeat floating-icon"></i>
          <i class="fas fa-stethoscope floating-icon"></i>
          <i class="fas fa-file-prescription floating-icon"></i>
          <i class="fas fa-notes-medical floating-icon"></i>
          <i class="fas fa-first-aid floating-icon"></i>
          <i class="fas fa-medkit floating-icon"></i>
        </div>
        
        <div class="profile-header-content">
          <div class="profile-avatar">
            <i class="fas fa-user"></i>
          </div>
          <h1 class="profile-name"><%= user.first_name %> <%= user.last_name %></h1>
          <p class="profile-role">
            <i class="fas fa-shield-alt"></i>
            <%= user.role %>
          </p>
        </div>
      </div>
      
      <% if (typeof success !== 'undefined' && success) { %>
        <div class="alert alert-success">
          <i class="fas fa-check-circle"></i>
          <%= success %>
        </div>
      <% } %>
      
      <div class="profile-content">
        <div style="display: flex; flex-direction: column; gap: 1.5rem;">
          <div class="profile-section fade-in">
            <h2>
              <i class="fas fa-user-circle"></i>
              Personal Information
            </h2>
            
            <form action="/auth/profile/update" method="POST">
              <div class="form-row">
                <div class="form-group">
                  <label class="form-label" for="firstName">First Name</label>
                  <input 
                    type="text" 
                    id="firstName" 
                    name="firstName" 
                    class="form-control" 
                    value="<%= user.first_name %>"
                    required
                  >
                </div>
                
                <div class="form-group">
                  <label class="form-label" for="lastName">Last Name</label>
                  <input 
                    type="text" 
                    id="lastName" 
                    name="lastName" 
                    class="form-control" 
                    value="<%= user.last_name %>"
                    required
                  >
                </div>
              </div>
              
              <div class="form-group">
                <label class="form-label" for="email">Email Address</label>
                <input 
                  type="email" 
                  id="email" 
                  name="email" 
                  class="form-control" 
                  value="<%= user.email %>"
                  required
                >
              </div>
              
              <div class="form-group">
                <label class="form-label" for="phone">Phone Number</label>
                <input 
                  type="tel" 
                  id="phone" 
                  name="phone" 
                  class="form-control" 
                  value="<%= user.phone || '' %>"
                  placeholder="Enter your phone number"
                >
              </div>
              
              <div class="form-group">
                <label class="form-label">Username</label>
                <input 
                  type="text" 
                  class="form-control" 
                  value="<%= user.username %>"
                  disabled
                >
                <small>Username cannot be changed</small>
              </div>
              
              <% if (user.branch_name) { %>
                <div class="form-group">
                  <label class="form-label">Primary Branch</label>
                  <input 
                    type="text" 
                    class="form-control" 
                    value="<%= user.branch_name %>"
                    disabled
                  >
                </div>
              <% } %>
              
              <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i>
                Save Changes
              </button>
            </form>
          </div>
          
          <div class="profile-section fade-in">
            <h2>
              <i class="fas fa-lock"></i>
              Change Password
            </h2>
            
            <form action="/auth/profile/change-password" method="POST">
              <div class="form-group">
                <label class="form-label" for="currentPassword">Current Password</label>
                <input 
                  type="password" 
                  id="currentPassword" 
                  name="currentPassword" 
                  class="form-control" 
                  placeholder="Enter current password"
                  required
                >
              </div>
              
              <div class="form-group">
                <label class="form-label" for="newPassword">New Password</label>
                <input 
                  type="password" 
                  id="newPassword" 
                  name="newPassword" 
                  class="form-control" 
                  placeholder="Enter new password"
                  minlength="6"
                  required
                >
              </div>
              
              <div class="form-group">
                <label class="form-label" for="confirmPassword">Confirm New Password</label>
                <input 
                  type="password" 
                  id="confirmPassword" 
                  name="confirmPassword" 
                  class="form-control" 
                  placeholder="Confirm new password"
                  minlength="6"
                  required
                >
              </div>
              
              <button type="submit" class="btn btn-primary">
                <i class="fas fa-key"></i>
                Update Password
              </button>
            </form>
          </div>
        </div>

        <div style="display: flex; flex-direction: column; gap: 1.5rem;">
          <div class="profile-section fade-in">
            <h2>
              <i class="fas fa-info-circle"></i>
              Account Details
            </h2>
            
            <div class="info-grid">
              <div class="info-item">
                <span class="info-label">Member Since</span>
                <span class="info-value">
                  <i class="fas fa-calendar-alt"></i>
                  <%= new Date(user.created_at).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) %>
                </span>
              </div>
              
              <div class="info-item">
                <span class="info-label">Last Updated</span>
                <span class="info-value">
                  <i class="fas fa-clock"></i>
                  <%= new Date(user.updated_at).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) %>
                </span>
              </div>
              
              <div class="info-item">
                <span class="info-label">Status</span>
                <span class="info-value">
                  <span class="badge badge-success">
                    Active
                  </span>
                </span>
              </div>
            </div>
          </div>

          <div class="logout-section fade-in">
            <h2>
              <i class="fas fa-sign-out-alt"></i>
              Sign Out
            </h2>
            <p>Ready to leave? You can securely sign out from your account here.</p>
            <form action="/auth/logout" method="GET">
              <button type="submit" class="logout-btn">
                <i class="fas fa-sign-out-alt"></i>
                Sign Out from Account
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Custom Modal for Errors -->
  <div id="errorModal" class="modal-overlay">
    <div class="modal-content">
      <button class="modal-close" onclick="closeModal()">
        <i class="fas fa-times"></i>
      </button>
      <div class="modal-icon error">
        <i class="fas fa-exclamation-triangle"></i>
      </div>
      <h3 class="modal-title">Email Already in Use</h3>
      <p class="modal-message" id="modalMessage">
        This email is already registered to another account. Please use a different email address.
      </p>
      <div class="modal-actions">
        <button class="modal-btn modal-btn-primary" onclick="closeModal()">
          <i class="fas fa-check"></i>
          Got it
        </button>
      </div>
    </div>
  </div>

  <script>

    function showModal(message) {
      const modal = document.getElementById('errorModal');
      const messageEl = document.getElementById('modalMessage');
      if (message) {
        messageEl.textContent = message;
      }
      modal.classList.add('active');
      document.body.style.overflow = 'hidden';
    }

    function closeModal() {
      const modal = document.getElementById('errorModal');
      modal.classList.remove('active');
      document.body.style.overflow = '';
    }


    document.getElementById('errorModal').addEventListener('click', function(e) {
      if (e.target === this) {
        closeModal();
      }
    });


    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') {
        closeModal();
      }
    });


    <% if (typeof error !== 'undefined' && error) { %>
      document.addEventListener('DOMContentLoaded', function() {
        showModal('<%= error.replace(/'/g, "\\'") %>');
      });
    <% } %>


    let isMobile = window.innerWidth <= 768;
    let animationFrameId;
    

    function optimizeForMobile() {
      if (isMobile) {

        const floatingIcons = document.querySelectorAll('.floating-icon');
        floatingIcons.forEach((icon, index) => {

          if (index >= 5) {
            icon.style.display = 'none';
          }
        });
      }
    }
    

    document.addEventListener('DOMContentLoaded', function() {
      optimizeForMobile();
      

      window.addEventListener('resize', function() {
        isMobile = window.innerWidth <= 768;
        optimizeForMobile();
      });
    });
    

    document.addEventListener('visibilitychange', function() {
      if (document.hidden) {

        const floatingIcons = document.querySelectorAll('.floating-icon');
        floatingIcons.forEach(icon => {
          icon.style.animationPlayState = 'paused';
        });
      } else {

        const floatingIcons = document.querySelectorAll('.floating-icon');
        floatingIcons.forEach(icon => {
          icon.style.animationPlayState = 'running';
        });
      }
    });
  </script>
</body>
</html>