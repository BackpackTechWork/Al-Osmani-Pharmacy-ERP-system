  <script>

(function() {
  const carousel = document.getElementById('categoriesCarousel');
  if (!carousel) return;

  const track = carousel.querySelector('.carousel-track');
  const leftBtn = document.querySelector('.left-btn');
  const rightBtn = document.querySelector('.right-btn');
  
  if (!track) return;
  
  const originalCards = Array.from(track.children);
  if (originalCards.length === 0) return;

  let allCards = [];
  let autoScrollInterval;
  let isScrolling = false;
  let scrollTimeout;
  let isTransitioning = false;


  function setupInfiniteScroll() {

    if (originalCards.length < 3) {
      allCards = originalCards;
      return;
    }


    const cloneCount = Math.min(3, originalCards.length);
    const startClones = originalCards.slice(-cloneCount).map(card => {
      const clone = card.cloneNode(true);
      clone.classList.add('clone');
      return clone;
    });
    const endClones = originalCards.slice(0, cloneCount).map(card => {
      const clone = card.cloneNode(true);
      clone.classList.add('clone');
      return clone;
    });


    startClones.forEach(clone => track.insertBefore(clone, track.firstChild));
    endClones.forEach(clone => track.appendChild(clone));

    allCards = Array.from(track.children);
    

    const firstRealIndex = cloneCount;
    const cardWidth = getCardWidth();
    track.scrollLeft = cardWidth * firstRealIndex;
  }


  function getCardWidth() {
    const firstCard = track.querySelector('.category-card');
    if (!firstCard) return 0;
    
    const cardWidth = firstCard.offsetWidth;
    const gap = window.innerWidth >= 768 ? 32 : window.innerWidth >= 480 ? 16 : 12;
    return cardWidth + gap;
  }


  function updateActiveCard() {
    if (isScrolling || isTransitioning) return;
    
    const containerRect = track.getBoundingClientRect();
    const containerCenter = containerRect.left + containerRect.width / 2;
    
    let closestCard = null;
    let closestDistance = Infinity;

    allCards.forEach(card => {
      const cardRect = card.getBoundingClientRect();
      const cardCenter = cardRect.left + cardRect.width / 2;
      const distance = Math.abs(containerCenter - cardCenter);
      
      if (distance < closestDistance) {
        closestDistance = distance;
        closestCard = card;
      }
    });

    allCards.forEach(card => card.classList.remove('active'));
    if (closestCard) {
      closestCard.classList.add('active');
    }
  }


  function handleInfiniteScroll() {
    if (originalCards.length < 3 || isTransitioning) return;

    const cardWidth = getCardWidth();
    const cloneCount = Math.min(3, originalCards.length);
    const threshold = cardWidth * 0.5;


    if (track.scrollLeft < threshold) {
      isTransitioning = true;
      const jumpTo = cardWidth * (originalCards.length + cloneCount) - (threshold - track.scrollLeft);
      track.scrollLeft = jumpTo;
      setTimeout(() => {
        isTransitioning = false;
        updateActiveCard();
      }, 50);
    }

    else if (track.scrollLeft > cardWidth * (allCards.length - cloneCount) - threshold) {
      isTransitioning = true;
      const jumpTo = cardWidth * cloneCount + (track.scrollLeft - cardWidth * (allCards.length - cloneCount));
      track.scrollLeft = jumpTo;
      setTimeout(() => {
        isTransitioning = false;
        updateActiveCard();
      }, 50);
    }
  }


  function scrollByCard(direction) {
    const cardWidth = getCardWidth();
    track.scrollBy({ left: cardWidth * direction, behavior: 'smooth' });
  }


  function startAutoScroll() {
    stopAutoScroll();
    if (originalCards.length > 1) {
      autoScrollInterval = setInterval(() => {
        scrollByCard(1);
      }, 4000);
    }
  }

  function stopAutoScroll() {
    if (autoScrollInterval) {
      clearInterval(autoScrollInterval);
      autoScrollInterval = null;
    }
  }


  if (leftBtn) {
    leftBtn.addEventListener('click', () => {
      stopAutoScroll();
      scrollByCard(-1);
      setTimeout(startAutoScroll, 5000);
    });
  }
  
  if (rightBtn) {
    rightBtn.addEventListener('click', () => {
      stopAutoScroll();
      scrollByCard(1);
      setTimeout(startAutoScroll, 5000);
    });
  }


  track.addEventListener('scroll', () => {
    isScrolling = true;
    
    clearTimeout(scrollTimeout);
    scrollTimeout = setTimeout(() => {
      isScrolling = false;
      handleInfiniteScroll();
      updateActiveCard();
    }, 150);
  });


  if (window.innerWidth >= 768) {
    carousel.addEventListener('mouseenter', stopAutoScroll);
    carousel.addEventListener('mouseleave', startAutoScroll);
  }


  track.addEventListener('touchstart', stopAutoScroll);
  track.addEventListener('touchend', () => {
    setTimeout(startAutoScroll, 3000);
  });


  let resizeTimeout;
  window.addEventListener('resize', () => {
    clearTimeout(resizeTimeout);
    resizeTimeout = setTimeout(() => {
      stopAutoScroll();

      track.innerHTML = '';
      originalCards.forEach(card => track.appendChild(card));
      allCards = [];
      setupInfiniteScroll();
      updateActiveCard();
      startAutoScroll();
    }, 300);
  });


  setupInfiniteScroll();
  updateActiveCard();
  

  setTimeout(() => {
    startAutoScroll();
  }, 2000);
})();
  </script>
